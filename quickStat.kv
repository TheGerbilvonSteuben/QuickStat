#:kivy 2.0
#:import webbrowser webbrowser
<ScreenManager>:
	Startup:
		name: 'startup'
	Display_1:
		name: 'display_1'
	Display_2:
		name: 'display_2'
	Display_3:
		name: 'display_3'

<Startup>:
	BoxLayout:
		cols: 1
		orientation: "vertical"
		size: root.width, root.height
		spacing: 20
		padding: 20
		
		Button:
			text: "Select Dataset"
			font_size: 32
			background_normal: ''
			background_color: (0,.6,0,1)
			on_release:
				root.file_selector()
				root.manager.current = 'display_1'
				root.manager.transition.direction = 'left'
				
			size_hint_y: None
			height: 25
			size: (50, 100)
						

		Button:
			text:'QuickStat Team. All Rights Reserved.'
			font_size: 17
			size_hint_y: None
			height: 25
			size: (50, 100)
			background_normal: ''
			background_color: (.7,.5,.5,1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos
			on_release: webbrowser.open('https://github.com/TheGerbilvonSteuben/QuickStat')


<Display_1>:
	on_enter: root.data_fill()
	GridLayout:
		cols: 2

<Display_2>:
	on_enter: root.data_fill()
	GridLayout:
		cols: 2

<Display_3>:
	on_enter: root.build_columns_as_tabs()
